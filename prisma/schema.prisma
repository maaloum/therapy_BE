// Prisma Schema for Therapy Booking Platform
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  DOCTOR
  ADMIN
}

enum Language {
  ARABIC
  FRENCH
}

enum SessionStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  DECLINED
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum MessageType {
  TEXT
  IMAGE
  FILE
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  phone         String?   @unique
  password      String
  firstName     String
  lastName      String
  preferredLanguage Language @default(FRENCH)
  role          UserRole  @default(CLIENT)
  isVerified    Boolean   @default(false)
  verificationToken String?
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  clientProfile ClientProfile?
  doctorProfile DoctorProfile?
  sentMessages  Message[] @relation("SenderMessages")
  receivedMessages Message[] @relation("ReceiverMessages")
  reviews       Review[]

  @@index([email])
  @@index([phone])
  @@index([role])
}

model ClientProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  photo     String?
  dateOfBirth DateTime?
  address   String?
  city      String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings  Booking[]
  payments  Payment[]

  @@index([userId])
}

model DoctorProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  bio             String?
  photo           String?
  specialization  String[]
  languages       Language[]
  hourlyRate      Float
  yearsOfExperience Int?   @default(0)
  availableHours  Json     // { "monday": ["09:00-12:00", "14:00-17:00"], ... }
  isVerified      Boolean  @default(false)
  rating          Float    @default(0)
  totalReviews    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings        Booking[]
  reviews         Review[]
  sessionNotes    SessionNote[]
  statistics      DoctorStatistics?

  @@index([userId])
  @@index([specialization])
  @@index([isVerified])
}

model Booking {
  id              String        @id @default(cuid())
  clientId        String
  doctorId        String
  sessionDate     DateTime
  sessionDuration Int           @default(60) // in minutes
  sessionType     String        @default("video") // video, chat, in-person
  status          SessionStatus @default(PENDING)
  meetingLink     String?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  client          ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)
  doctor          DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  payment         Payment?
  sessionNote     SessionNote?
  review          Review?

  @@index([clientId])
  @@index([doctorId])
  @@index([sessionDate])
  @@index([status])
}

model Payment {
  id              String        @id @default(cuid())
  bookingId       String?       @unique
  clientId        String
  amount          Float
  currency        String        @default("MRU")
  paymentMethod   String        // manual, stripe, paypal
  paymentIntentId String?       // Stripe payment intent ID
  screenshot      String?       // Path to payment screenshot
  status          PaymentStatus @default(PENDING)
  transactionId  String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  booking         Booking?      @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  client          ClientProfile @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([clientId])
  @@index([status])
  @@index([paymentIntentId])
}

model Review {
  id        String   @id @default(cuid())
  bookingId String?  @unique
  clientId  String
  doctorId  String
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booking   Booking? @relation(fields: [bookingId], references: [id], onDelete: SetNull)
  client    User     @relation(fields: [clientId], references: [id], onDelete: Cascade)
  doctor    DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
  @@index([rating])
}

model Message {
  id        String      @id @default(cuid())
  senderId  String
  receiverId String
  bookingId String?
  content   String
  type      MessageType @default(TEXT)
  isRead    Boolean     @default(false)
  createdAt DateTime    @default(now())

  sender    User        @relation("SenderMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver  User        @relation("ReceiverMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([bookingId])
  @@index([createdAt])
}

model SessionNote {
  id        String   @id @default(cuid())
  bookingId String   @unique
  doctorId  String
  notes     String   // Private notes for doctor
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  booking   Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  doctor    DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
  @@index([bookingId])
}

model DoctorStatistics {
  id              String   @id @default(cuid())
  doctorId        String   @unique
  totalSessions   Int      @default(0)
  completedSessions Int    @default(0)
  upcomingSessions Int     @default(0)
  totalEarnings   Float    @default(0)
  monthlyEarnings Float   @default(0)
  lastUpdated     DateTime @default(now())

  doctor          DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
}

model Translation {
  id        String   @id @default(cuid())
  key       String
  language  Language
  value     String
  category  String?  // common, auth, booking, etc.
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([key, language])
  @@index([language])
  @@index([category])
}

model SystemSettings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

